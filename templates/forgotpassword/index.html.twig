

{% block head %}


<head>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<!--ANIMATION BUTTONS loading.io -->
	<!-- MATERIAL DESIGN ICONIC FONT -->
	<title>Recupération mot de passe</title>
	<link rel="stylesheet" href="{{ asset('login/fonts/material-design-iconic-font/css/material-design-iconic-font.min.css') }}">
	<!-- FONT AWESOME (LOCAL) -->
	<link href="{{ asset('login/fa/css/all.css') }}" rel="stylesheet">
	<!-- BOOTSTRAP (LOCAL) -->
