{% block title %}Publication{% endblock %}

{% block body %}
    <h1>Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdPublication</th>
                <td>{{ publication.idPublication }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publication.description }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ publication.fichier }}</td>
            </tr>
            <tr>
                <th>Visibilite</th>
                <td>{{ publication.visibilite }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ publication.priority }}</td>
            </tr>
